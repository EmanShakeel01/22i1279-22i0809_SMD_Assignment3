<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp"
            app:tint="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comments"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Divider below header -->
    <View
        android:id="@+id/headerDivider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/headerLayout"
        android:background="#E0E0E0" />

    <!-- Comments RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerDivider"
        android:layout_above="@id/commentInputDivider"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Divider above input -->
    <View
        android:id="@+id/commentInputDivider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_above="@id/commentInputLayout"
        android:background="#E0E0E0" />

    <!-- Bottom Input Section -->
    <LinearLayout
        android:id="@+id/commentInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Profile Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/mystory"
            android:layout_marginEnd="12dp" />

        <!-- Comment Input Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/comment_input_bg"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/commentInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Add a comment..."
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:maxLines="4"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/sendCommentBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/send_icon"
                android:contentDescription="Send"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
