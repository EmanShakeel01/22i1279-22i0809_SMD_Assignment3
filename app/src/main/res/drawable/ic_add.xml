<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Horizontal bar -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="16dp" android:height="2dp" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="1dp" />
        </shape>
    </item>

    <!-- Vertical bar (centered over horizontal) -->
    <item
        android:left="7dp"
        android:right="7dp"
        android:top="0dp"
        android:bottom="0dp">
        <rotate android:fromDegrees="90">
            <shape android:shape="rectangle">
                <size android:width="16dp" android:height="2dp" />
                <solid android:color="#FFFFFF" />
                <corners android:radius="1dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
